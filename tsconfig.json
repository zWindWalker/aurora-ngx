{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@aurora-ngx/schematics": [
        "libs/schematics/src/index.ts"
      ],
      "@aurora-ngx/icons": [
        "libs/icons/src/index.ts"
      ],
//      "@aurora-ngx/forms": [
//        "libs/forms/src/index.ts"
//      ],
//      "@aurora-ngx/ui": [
//        "libs/ui/src/index.ts"
//      ],
//      "@aurora-ngx/animations": [
//        "libs/animations/src/index.ts"
//      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
